<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Product Form</title>
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/seodashlogo.png" />
  <link rel="stylesheet" href="../../node_modules/simplebar/dist/simplebar.min.css">
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">

    <%- include("./partial/sidebar")%>

      <div class="body-wrapper">
        <%- include("./partial/header")%>

          <div class="container-fluid">
            <section class="vh-100">
              <div class="container h-100">
                <div class="row justify-content-center align-items-center h-100">
                  <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                      <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Product Form</h3>
                        <form method="post" action="/product/productForm" enctype="multipart/form-data">

                          <div class="row">
                            <div class="col-12 mb-4 pb-2">
                              <div class="form-outline">
                                <input type="text" name="productName" class="form-control form-control-lg" required />
                                <label class="form-label">Product Name</label>
                              </div>
                            </div>
                          </div>

                          <div class="row">
                            <div class="col-12 mb-4 pb-2">
                              <div class="form-outline">
                                <input type="file" name="productImage" class="form-control form-control-lg" required />
                                <label class="form-label">Upload Product Image</label>
                              </div>
                            </div>
                          </div>

                          <div class="row">
                            <div class="col-12 mb-4 pb-2">
                              <div class="form-outline">
                                <input type="number" step="0.01" name="productPrice"
                                  class="form-control form-control-lg" required />
                                <label class="form-label">Price ($)</label>
                              </div>
                            </div>
                          </div>

                          <div class="row">
                            <div class="col-12 mb-4 pb-2">
                              <div class="form-outline">
                                <select name="extraCategoryTd" class="form-control form-control-lg">
                                  <% data.map((e, i)=> { %>
                                    <option value="<%= e.id %>">
                                      <%= e.extCatName %>
                                    </option>
                                    <% }) %>
                                </select>
                                <label class="form-label">Extra Category</label>
                              </div>
                            </div>
                          </div>

                          <div class="pt-2">
                            <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
      </div>
  </div>

  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="../assets/js/sidebarmenu.js"></script>
  <script src="../assets/js/app.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>
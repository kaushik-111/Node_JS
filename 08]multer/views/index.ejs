<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            margin: 0;
            padding: 20px;
            color: #333;
            background: linear-gradient(45deg, #ff7e5f, #feb47b, #6a11cb, #2575fc);
            background-size: 600% 600%;
            transition: background 1s ease;
        }

        h1 {
            color: white;
            font-size: 3em;
            text-transform: uppercase;
            margin-bottom: 20px;
            transition: transform 0.3s ease, opacity 0.3s ease;
        }

        h1:hover {
            transform: translateY(-10px);
            opacity: 0.8;
        }

        form {
            background: #fff;
            padding: 30px;
            display: inline-block;
            border-radius: 20px;
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        form:hover {
            transform: scale(1.05);
            box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.15);
        }

        input[type="text"],
        input[type="file"] {
            padding: 12px;
            margin: 12px;
            border: 2px solid #ccc;
            border-radius: 10px;
            width: 80%;
            max-width: 300px;
            background: linear-gradient(45deg, #ff9a9e, #fad0c4);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        input[type="text"]:focus,
        input[type="file"]:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 4px 20px rgba(0, 123, 255, 0.3);
        }

        button {
            background: linear-gradient(135deg, #f39c12, #f1c40f);
            color: white;
            border: none;
            padding: 12px 18px;
            cursor: pointer;
            border-radius: 8px;
            font-size: 1.1em;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
        }

        button:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
            background: linear-gradient(135deg, #ff6a00, #ff9e2c);
        }

        table {
            width: 70%;
            margin: 20px auto;
            background: white;
            border-collapse: collapse;
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        table th,
        table td {
            padding: 15px;
            border: 1px solid #ddd;
            text-align: center;
            background-color: #f8f8f8;
            font-size: 1.1em;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        table th {
            background: #007bff;
            color: white;
            font-size: 1.2em;
        }

        table tr:hover td {
            background-color: #e9ecef;
            transform: translateY(-5px);
        }

        img {
            border-radius: 10px;
            max-width: 80px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        img:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        a button {
            background-color: #ff4d4d;
            color: white;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        a button:hover {
            background-color: #ff3333;
            transform: scale(1.1);
        }

        @media (max-width: 768px) {
            table {
                width: 90%;
            }

            input[type="text"],
            input[type="file"] {
                width: 100%;
                max-width: none;
            }

            button {
                width: 100%;
            }
        }

    </style>
</head>

<body>
    <h1>Server started</h1>
    <form action="/addData" method="post" enctype="multipart/form-data">
        <input type="text" placeholder="Enter your name" name="name">
        <input type="file" name="image">
        <button type="submit">Submit</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((e) => { %>
            <tr>
                <td><%= e.id %></td>
                <td><%= e.name %></td>
                <td><img src="/<%= e.image %>" alt="Image"></td>
                <td><a href="/editData/<%= e.id %>"><button>Edit</button></a></td>
                <td><a href="/deleteData?id=<%= e.id %>"><button>Delete</button></a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>

</html>
